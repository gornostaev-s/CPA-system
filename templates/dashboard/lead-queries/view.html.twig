<div class="row margin-0">
    <div class="col-sm-4 settings-menu-wrapper">
        <div class="settings-menu">
            <div class="tabs">
                <div class="tab js-tab tab-active" data-tab="1">
                    <h6 class="tab-title">
                        <div class="tabs-icon-wrapper">
                            <i class="fa fa-handshake-o" aria-hidden="true"></i>
                        </div>
                        Запрос
                    </h6>
                </div>
                <div class="tab js-tab" data-tab="2">
                    <h6 class="tab-title">
                        <div class="tabs-icon-wrapper">
                            <i class="fa fa-check" aria-hidden="true"></i>
                        </div>
                        Выбрать предложенный поток
                    </h6>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-8 padding-0">
        <section class="settings-section js-content default-visible" data-tab="1">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h6 class="settings-title">
                            Запрос
                        </h6>
                    </div>
                    <div class="settings">
                        <form action="/dashboard/settings" method="post">
                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <div class="settings-form-wrapper">
                                        <h5>
                                            Тематика:
                                        </h5>
                                        <p>
                                            {{ query.category.title }}
                                        </p>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="settings-form-wrapper">
                                        <h5>
                                            Регион:
                                        </h5>
                                        <p>
                                            {{ query.region.region }}
                                        </p>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="settings-form-wrapper">
                                        <h5>
                                            Описание:
                                        </h5>
                                        <p>
                                            {{ query.description }}
                                        </p>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="settings-form-wrapper">
                                        <h5>
                                            Цена за качественный лид :
                                        </h5>
                                        <p>
                                            {% if query.costRange['min'] or query.costRange['max'] %}
                                                от {{ query.costRange['min'] }}р. до {{ query.costRange['max'] }}р.
                                            {% else %}
                                                не имеет значения
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="settings-form-wrapper">
                                        <h5>
                                            Количество лидов ОТ - ДО :
                                        </h5>
                                        <p>
                                            {% if query.leadsRange['min'] or query.leadsRange['max'] %}
                                                от {{ query.leadsRange['min'] }} до {{ query.leadsRange['max'] }}
                                            {% else %}
                                                не имеет значения
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <section class="settings-section js-content" data-tab="2">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h6 class="settings-title">
                            Выбрать поток
                        </h6>
                    </div>
                    <div class="settings">
                        <form action="/dashboard/lead-queries/check/{{ query.id }}" method="post">
                            <div class="row">
                                <div class="col-12">
                                    <div class="settings-form-wrapper">
                                        <label>
                                            <input
                                                    type="checkbox"
                                                    name="resolved"
                                                    {% if query.resolved %}
                                                        checked
                                                    {% endif %}
                                            >
                                            <span class="settings-form__checkbox">
                                                Запрос лидов больше не актуален
                                            </span>
                                        </label>
                                    </div>
                                    <div class="settings-form-wrapper">
                                        <h5>
                                            Поток :
                                        </h5>
                                        <p>
                                            <select class="admin-form__select" name="flowId">
                                                <option value="0">Выберите поток</option>
                                                {% for flow in flows %}
                                                    <option
                                                            value="{{ flow.id }}"
                                                            {% if query.flow and query.flow.id == flow.id %}
                                                                selected
                                                            {% endif %}
                                                    >{{ flow.whatLeadsSold }}</option>
                                                {% endfor %}
                                            </select>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="settings-submit-wrapper">
                                        <input type="submit" class="button-primary" value="Подтвердить">
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>