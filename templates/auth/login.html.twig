                                <div class="login-input-wrapper">
                                    <input class="form-section__input login-input" type="text" name="login" placeholder="Логин"> 
                                </div>
                                <div class="login-input-wrapper">
                                    <input class="form-section__input login-input" type="password" name="password" placeholder="Пароль">
                                </div>
                                <div class="login-input-wrapper">
                                    <input type="submit" class="button-primary login-input3" value="Войти">
                                </div>
                            </form>
                        </div>
                    </div>        
                </div>
            </div>
        </div>
    </section>    
