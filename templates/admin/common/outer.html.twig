<script src="https://code.jquery.com/jquery-3.6.3.min.js" integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>
<script type="text/javascript">
    // Отслеживаем клик по табу
    jQuery('.js-tab').click(function () {
        // Запишем таб по которому был сделан клик в переменную для удобства
        $this = jQuery(this)
        // Получим идентификатор таба который нужно показать из data-tab
        const id = $this.data('tab')

        // Удалим класс active у всех табов
        jQuery('.js-tab').removeClass('active')
        // Добавим класс active табу по которому мы кликнули
        $this.addClass('active')

        // скроем сначала все вкладки
        jQuery('.js-content').hide()
        // покажем вкладку с нужным нам идентификатором
        jQuery('.js-content[data-tab='+id+']').show();
        jQuery('.tab').removeClass('tab-active');
        jQuery(this).toggleClass('tab-active')
    })
</script>
</body>
</html>